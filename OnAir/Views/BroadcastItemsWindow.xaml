<Window x:Class="OnAir.Views.BroadcastItemsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:OnAir.Converters"
        Title="Управление элементами вещания" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <converters:BroadcastItemTypeConverter x:Key="BroadcastItemTypeConverter"/>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="AddButton" Content="Добавить" Width="120" Margin="0,0,10,0" Click="AddButton_Click"/>
            <Button x:Name="EditButton" Content="Редактировать" Width="120" Margin="0,0,10,0" Click="EditButton_Click"/>
            <Button x:Name="DeleteButton" Content="Удалить" Width="120" Click="DeleteButton_Click"/>
        </StackPanel>

        <DataGrid x:Name="ItemsDataGrid" Grid.Row="1" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionUnit="FullRow">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Время показа" Binding="{Binding BroadcastTime, StringFormat='{}{0:hh\\:mm}'}" Width="100"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Title}" Width="*"/>
                <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="*"/>
                <DataGridTextColumn Header="Серия" Binding="{Binding Series}" Width="80"/>
                <DataGridTextColumn Header="Часть" Binding="{Binding Part}" Width="80"/>
                <DataGridTextColumn Header="Права" Binding="{Binding Rights}" Width="120"/>
                <DataGridTextColumn Header="Заказчик" Binding="{Binding Customer}" Width="120"/>
                <DataGridTextColumn Header="Длительность" Binding="{Binding Duration, StringFormat='{}{0:hh\\:mm}'}" Width="100"/>
                <DataGridTextColumn Header="Возрастное ограничение" Binding="{Binding AgeLimit, StringFormat='{}{0}+'}" Width="150"/>
                <DataGridTextColumn Header="Тип" Binding="{Binding BroadcastItemType, Converter={StaticResource BroadcastItemTypeConverter}}" Width="100"/>
                <DataGridTextColumn Header="Дата показа" Binding="{Binding Broadcast.Date, StringFormat='{}{0:dd.MM.yyyy}'}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window> 