<Window x:Class="OnAir.Views.BroadcastItemsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:OnAir.Converters"
        Title="Управление элементами вещания" 
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource AppBackgroundGradient}">
    <Window.Resources>
        <converters:BroadcastItemTypeConverter x:Key="BroadcastItemTypeConverter"/>
    </Window.Resources>
    <Grid Background="{DynamicResource AppBackgroundGradient}">
        <Border Margin="40"
                Padding="20"
                CornerRadius="16"
                Background="{DynamicResource PanelBrush}">
            <Border.Effect>
                <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.35"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <Button x:Name="AddButton" Content="Добавить" Width="120" Margin="0,0,10,0" Click="AddButton_Click" Style="{StaticResource ModernButtonStyle}"/>
                    <Button x:Name="EditButton" Content="Редактировать" Width="120" Margin="0,0,10,0" Click="EditButton_Click" Style="{StaticResource ModernButtonStyle}"/>
                    <Button x:Name="DeleteButton" Content="Удалить" Width="120" Click="DeleteButton_Click" Style="{StaticResource ModernButtonStyle}"/>
                </StackPanel>

                <DataGrid x:Name="ItemsDataGrid" 
                          Grid.Row="1"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          SelectionUnit="FullRow">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                        <DataGridTextColumn Header="Название" Binding="{Binding Title}" Width="*"/>
                        <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="*"/>
                        <DataGridTextColumn Header="Тип" Binding="{Binding BroadcastItemType, Converter={StaticResource BroadcastItemTypeConverter}}" Width="Auto"/>
                        <DataGridTextColumn Header="Серия" Binding="{Binding Series}" Width="Auto"/>
                        <DataGridTextColumn Header="Часть" Binding="{Binding Part}" Width="Auto"/>
                        <DataGridTextColumn Header="Права" Binding="{Binding Rights}" Width="Auto"/>
                        <DataGridTextColumn Header="Заказчик" Binding="{Binding Customer}" Width="Auto"/>
                        <DataGridTextColumn Header="Длительность" Binding="{Binding Duration}" Width="Auto"/>
                        <DataGridTextColumn Header="Возрастное ограничение" Binding="{Binding AgeLimit}" Width="Auto"/>
                        <DataGridTextColumn Header="BroadcastId" Binding="{Binding BroadcastId}" Width="Auto"/>
                        <DataGridTextColumn Header="Дата показа" Binding="{Binding Broadcast.Date, StringFormat='{}{0:dd.MM.yyyy}'}" Width="Auto"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</Window> 