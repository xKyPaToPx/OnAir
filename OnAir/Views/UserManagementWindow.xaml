<Window x:Class="OnAir.Views.UserManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление пользователями" Height="450" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Padding="10">
            <TextBlock Text="Управление пользователями" FontSize="18"/>
        </Border>
        <DataGrid x:Name="UsersDataGrid" 
          AutoGenerateColumns="False" 
          CanUserAddRows="False"
          ItemsSource="{Binding Users}"
          SelectionMode="Single"
          SelectionUnit="FullRow">
            <DataGrid.Columns>
                <!-- ID -->
                <DataGridTextColumn Header="ID" 
                            Binding="{Binding Id}" 
                            IsReadOnly="True"
                            Width="Auto"/>

                <!-- Логин -->
                <DataGridTextColumn Header="Логин" 
                            Binding="{Binding Username}" 
                            IsReadOnly="True"
                            Width="*"/>

                <!-- Роль -->
                <DataGridTextColumn Header="Роль" 
                            Binding="{Binding Role}" 
                            IsReadOnly="True"
                            Width="Auto"/>

                <!-- Полное имя -->
                <DataGridTextColumn Header="Полное имя" 
                            Binding="{Binding FullName}" 
                            IsReadOnly="True"
                            Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,0">
            <Button Content="Добавить" Width="100" Click="AddUser_Click" Margin="10,10,10,10"/>
            <Button Content="Редактировать" Width="120" Click="EditUser_Click" Margin="0,10,10,10"/>
            <Button Content="Удалить" Width="100" Click="DeleteUser_Click" Margin="0,10,10,10"/>
        </StackPanel>
    </Grid>
</Window> 