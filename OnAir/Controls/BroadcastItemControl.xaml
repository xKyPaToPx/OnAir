<UserControl x:Class="OnAir.Controls.BroadcastItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/ModernCardBlockStyle.xaml"/>
                <ResourceDictionary Source="/Themes/ModernCardBlockTextAndGridStyle.xaml"/>
                <ResourceDictionary Source="/Themes/ModernButtonStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Background="Transparent">
        <StackPanel HorizontalAlignment="Center" MaxWidth="1100" Margin="0,30,0,0">
            <Border Style="{StaticResource ModernCardBlockStyle}" Margin="0,0,0,16">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Добавить" Style="{StaticResource ModernButtonStyle}" Margin="0,0,10,0"/>
                    <Button Content="Редактировать" Style="{StaticResource ModernButtonStyle}" Margin="0,0,10,0"/>
                    <Button Content="Удалить" Style="{StaticResource ModernButtonStyle}"/>
                </StackPanel>
            </Border>
            <Border Style="{StaticResource ModernCardBlockStyle}">
                <DataGrid x:Name="BroadcastItemsDataGrid"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          Style="{StaticResource ModernCardDataGridStyle}">
                    <DataGrid.Resources>
                        <Style TargetType="ScrollBar" BasedOn="{StaticResource ModernScrollBarStyle}"/>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Длительность" Binding="{Binding Duration}" Width="100"/>
                        <DataGridTextColumn Header="Тип" Binding="{Binding Type}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </StackPanel>
    </Grid>
</UserControl> 