<Window x:Class="OnAir.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OnAir"
        mc:Ignorable="d"
        Title="OnAir - Система управления" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Одинаковый размер шрифта для всех TextBlock -->
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <!-- Одинаковый размер и стиль для всех Button -->
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,0"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Padding="10" BorderThickness="0,0,0,2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="OnAir - Система управления"
                         FontSize="24"
                         FontWeight="Bold"
                         VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" 
                          Orientation="Horizontal" 
                          VerticalAlignment="Center">
                    <TextBlock x:Name="UserInfoTextBlock"
                             Margin="0,0,10,0"
                             VerticalAlignment="Center"/>
                    <Button x:Name="LogoutButton"
                            Content="Выйти"
                            Padding="10,5"
                            Background="Transparent"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="LogoutButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Role-specific content will be loaded here -->
            <ContentControl x:Name="RoleContentControl" Grid.Row="0"/>
        </Grid>
    </Grid>
</Window>
