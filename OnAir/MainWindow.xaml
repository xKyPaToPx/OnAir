<Window x:Class="OnAir.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OnAir"
        mc:Ignorable="d"
        Title="OnAir - Система управления" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource AppBackgroundGradient}">
    <Grid Background="{DynamicResource AppBackgroundGradient}">
        <Border Margin="40"
                Padding="20"
                CornerRadius="16"
                Background="{DynamicResource PanelBrush}">
            <Border.Effect>
                <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.35"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Padding="10" BorderThickness="0,0,0,2" BorderBrush="{StaticResource PrimaryBrush}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="OnAir - Система управления"
                                 Style="{StaticResource HeaderText}"
                                 VerticalAlignment="Center"/>
                        
                        <StackPanel Grid.Column="1" 
                                  Orientation="Horizontal" 
                                  VerticalAlignment="Center">
                            <TextBlock x:Name="UserInfoTextBlock"
                                     Margin="0,0,10,0"
                                     VerticalAlignment="Center"/>
                            <Button x:Name="LogoutButton"
                                    Content="Выйти"
                                    Click="LogoutButton_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Main Content -->
                <Grid Grid.Row="1" Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Role-specific content will be loaded here -->
                    <ContentControl x:Name="RoleContentControl" Grid.Row="0"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
